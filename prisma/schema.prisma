generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"      // ⬅️ au lieu de "sqlite"
  url      = env("DATABASE_URL")
}

model Project {
  id         Int         @id @default(autoincrement())
  name       String
  clientName String
  token      String       @unique
  createdAt  DateTime     @default(now())
  thumbnails Thumbnail[]
  votes      Vote[]
}

model Thumbnail {
  id         Int      @id @default(autoincrement())
  project    Project  @relation(fields: [projectId], references: [id])
  projectId  Int
  title      String
  imageUrl   String
  createdAt  DateTime @default(now())
  votes      Vote[]
}

model Vote {
  id          Int       @id @default(autoincrement())
  project     Project   @relation(fields: [projectId], references: [id])
  projectId   Int
  thumbnail   Thumbnail @relation(fields: [thumbnailId], references: [id])
  thumbnailId Int
  token       String
  value       Int       // -1, 0, 1
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  @@unique([thumbnailId, token])
}
